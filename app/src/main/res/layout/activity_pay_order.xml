<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        tools:context=".ui.me.PayOrderActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="138dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout3">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近13年（2007~2019）真题视频（2元起可观看全部视频..."
                android:textColor="#ff333333"
                android:textSize="15sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" android:id="@+id/wg_title"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1天"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/wg_title" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/wg_time"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格：2.0"
                android:textColor="#ffe4413a"
                android:textSize="15sp"
                android:id="@+id/wg_price" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/wg_time"
                app:layout_constraintStart_toStartOf="@+id/wg_time"
                app:layout_constraintEnd_toEndOf="@+id/wg_time"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="#ff999999"
                android:textSize="13sp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" android:id="@+id/textView20"/>
        <View android:layout_width="wrap_content" android:layout_height="1dp" android:background="@color/bg_line"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/textView20" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:id="@+id/view10"/>
        <View android:layout_width="wrap_content" android:layout_height="1dp" android:background="@color/bg_line"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="58dp"
                android:text="支付宝支付"
                android:textColor="#ff999999"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/view10"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/wg_alipay_pay"/>
        <View android:layout_width="wrap_content" android:layout_height="1dp" android:background="@color/bg_line"
              app:layout_constraintTop_toBottomOf="@+id/wg_alipay_pay" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:id="@+id/view11"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:text="微信支付"
                android:gravity="center_vertical"
                android:paddingLeft="58dp"
                android:textColor="#ff999999"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view11"
                app:layout_constraintHorizontal_bias="0.0" android:id="@+id/wg_wechat_pay"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back02"
                android:id="@+id/imageView26" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/view11"
                app:layout_constraintTop_toTopOf="@+id/wg_alipay_pay" android:layout_marginBottom="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back02"
                android:id="@+id/imageView28" app:layout_constraintEnd_toEndOf="@+id/wg_wechat_pay"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/view11"
                app:layout_constraintBottom_toBottomOf="@+id/wg_wechat_pay"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_alipay"
                android:id="@+id/imageView29" app:layout_constraintStart_toStartOf="@+id/wg_alipay_pay"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/view10"
                app:layout_constraintBottom_toTopOf="@+id/view11"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_wechar"
                android:id="@+id/imageView30" app:layout_constraintStart_toStartOf="@+id/wg_wechat_pay"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/view11"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/wg_wechat_pay"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>