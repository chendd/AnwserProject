<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/wg_top"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingRight="18dp"
            android:paddingTop="14dp"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_white_back"
            android:id="@+id/wg_top_left"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:id="@+id/wg_top_title"
            android:text="denglu"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>
    <Button
            android:text="编辑"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:background="@null"
            android:id="@+id/wg_top_right"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:layout_alignParentEnd="true"
    />
    <View android:layout_alignParentBottom="true" android:background="@color/bg_line" android:layout_width="match_parent" android:layout_height="1px"/>
</RelativeLayout>