<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="222dp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="236dp">


    <ImageView
            android:layout_width="wrap_content"
            android:padding="6dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close"
            android:id="@+id/wg_close" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:layout_marginEnd="4dp"/>

    <com.ruffian.library.widget.RTextView
            android:layout_width="match_parent"
            android:text="QQ留言"
            app:corner_radius="@dimen/dp_4"
            app:background_normal="@color/bg_red"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_height="34dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/wg_qq"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/wg_weixin"
            app:layout_constraintVertical_chainStyle="packed"/>

    <com.ruffian.library.widget.RTextView
            android:layout_width="match_parent"
            app:corner_radius="@dimen/dp_4"
            android:gravity="center"
            app:background_normal="@color/bg_red"
            android:text="微信留言"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_height="34dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:id="@+id/wg_weixin"
            app:layout_constraintTop_toBottomOf="@+id/wg_qq" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/textView33" android:layout_marginTop="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示：客服会及时回复您"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView33"/>
</android.support.constraint.ConstraintLayout>