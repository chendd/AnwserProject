<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.me.SettingActivity">
    //我的资料列表
    <!--图片缓存-->
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="48dp"
            android:layout_marginTop="0.5dp"
            android:id="@+id/wg_item_cache" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/wg_item_comment">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据缓存"
                android:textColor="#ff333333"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="123m"
                  android:textSize="13sp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="16dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/wg_tv_imgsize"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?android:attr/selectableItemBackground"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/wg_item_forget">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="#ff333333"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="13dp" app:srcCompat="@drawable/ic_go"
                android:id="@+id/imageView21" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="48dp"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/wg_item_forget" android:id="@+id/wg_item_comment">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去评分"
                android:textColor="#ff333333"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="13dp" app:srcCompat="@drawable/ic_go"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="0.5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/wg_item_cache" android:id="@+id/wg_item_suggest"
            tools:layout_editor_absoluteX="0dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textColor="#ff333333"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="13dp" app:srcCompat="@drawable/ic_go"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
          android:background="@color/line_color" app:layout_constraintBottom_toTopOf="@+id/wg_item_cache"
          android:id="@+id/view7"/>
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
          android:background="@color/line_color" app:layout_constraintBottom_toTopOf="@+id/wg_item_suggest"/>
    <com.ruffian.library.widget.RTextView
            android:layout_width="match_parent"
            android:text="退出登录"
            android:textColor="@color/white"
            android:gravity="center"
            app:background_normal="@color/bg_red"
            app:background_pressed="@color/bg_red_press"
            app:corner_radius="@dimen/dp_4"
            android:layout_height="40dp" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/wg_item_suggest" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:id="@+id/wg_item_quite">
    </com.ruffian.library.widget.RTextView>
</android.support.constraint.ConstraintLayout>