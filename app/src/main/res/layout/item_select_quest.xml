<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/wg_item"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="24dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="24dp" android:background="@drawable/ic_smll_circle"
            android:id="@+id/wg_iv_status"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:id="@+id/wg_tv_answer" app:layout_constraintStart_toEndOf="@+id/wg_iv_status"
            android:layout_marginStart="14dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/wg_iv_status"
            app:layout_constraintTop_toTopOf="@+id/wg_iv_status"
            app:layout_constraintVertical_bias="0.39"/>

</android.support.constraint.ConstraintLayout>
