<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        tools:context=".ui.me.UserInfoActivity">
    <RelativeLayout android:layout_width="match_parent"
                  android:background="@android:color/white"
                  android:layout_height="48dp"
                  android:paddingLeft="14dp"
                  android:id="@+id/wg_item_img"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用户头像"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
        <ImageView android:layout_alignParentEnd="true"
                   android:layout_marginRight="14dp" android:layout_width="40dp" android:layout_height="40dp"
                   android:layout_marginTop="0dp" android:layout_alignParentTop="true"
                   android:layout_alignParentBottom="true" android:id="@+id/wg_img" android:layout_marginBottom="0dp"/>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/wg_item_name"
            android:background="@android:color/white"
            android:layout_marginTop="1dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:gravity="center_vertical" android:paddingLeft="14dp"
            android:orientation="horizontal" android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/wg_item_img" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户昵称"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
        <TextView
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_marginRight="14dp"
                android:textColor="#ff333333"
                android:textSize="13sp"
                android:layout_height="wrap_content" android:id="@+id/wg_name" android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/wg_item_sex"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@+id/wg_item_name"
            android:gravity="center_vertical" android:paddingLeft="14dp"
            android:orientation="horizontal" android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="1dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户性别"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:gravity="center|right"
                  android:text="男"
                  android:paddingRight="8dp"
                  android:textColor="#ff666666"
                  android:textSize="13sp"
                  android:layout_weight="1" android:id="@+id/wg_sex"/>
        <ImageView
                android:layout_width="8dp"
                android:layout_marginRight="14dp"
                android:layout_height="13dp" app:srcCompat="@drawable/ic_go"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/wg_item_year"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/wg_item_sex"
            android:gravity="center_vertical" android:paddingLeft="14dp"
            android:orientation="horizontal" android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="1dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="插本年份"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:gravity="center|right"
                  android:text="2019"
                  android:paddingRight="8dp"
                  android:textColor="#ff666666"
                  android:textSize="13sp"
                  android:layout_weight="1" android:id="@+id/wg_year"/>
        <ImageView
                android:layout_width="8dp"
                android:layout_marginRight="14dp"
                android:layout_height="13dp" app:srcCompat="@drawable/ic_go"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/wg_item_zhuang"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/wg_item_year"
            android:gravity="center_vertical" android:paddingLeft="14dp"
            android:orientation="horizontal" android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专科院校"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:gravity="center|right"
                  android:text="请选择"
                  android:paddingRight="8dp"
                  android:textColor="#ff666666"
                  android:textSize="13sp"
                  android:layout_weight="1" android:id="@+id/wg_tv_zhuan"/>
        <ImageView
                android:layout_width="8dp"
                android:layout_marginRight="14dp"
                android:layout_height="13dp" app:srcCompat="@drawable/ic_go"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/wg_item_zhuang"
            android:gravity="center_vertical" android:paddingLeft="14dp"
            android:orientation="horizontal" android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="1dp" android:id="@+id/wg_item_bao">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报考院校"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:gravity="center|right"
                  android:text="请选择"
                  android:paddingRight="8dp"
                  android:textColor="#ff666666"
                  android:textSize="13sp"
                  android:layout_weight="1" android:id="@+id/wg_tv_bao"/>
        <ImageView
                android:layout_width="8dp"
                android:layout_marginRight="14dp"
                android:layout_height="13dp" app:srcCompat="@drawable/ic_go"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>