<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/wg_img" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周杰伦"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:id="@+id/wg_name" app:layout_constraintStart_toEndOf="@+id/wg_img"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view15"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1天前"
            android:textColor="#ff999999"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view15" android:id="@+id/wg_time"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/bg_line"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
          app:layout_constraintTop_toTopOf="parent" android:id="@+id/view15"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="非常实用，收获很多知识"
            android:lineSpacingExtra="8dp"
            android:textColor="#ff333333"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/wg_name"
            app:layout_constraintTop_toBottomOf="@+id/view15" android:layout_marginTop="16dp"
            android:id="@+id/wg_content" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买时间：2019-05-08  15:24:03"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/wg_content"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/wg_content"
            android:id="@+id/wg_buy_time"/>
    <TextView
            android:layout_width="0dp"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:lineSpacingExtra="8dp"
            android:layout_height="wrap_content"
            android:textColor="#ff999999"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/wg_buy_time"
            app:layout_constraintTop_toBottomOf="@+id/wg_buy_time" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/view16"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/wg_repaly_content"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="16dp" android:visibility="gone"
    />

    <View android:layout_width="match_parent" android:layout_height="12dp" android:background="@color/bg_gray"
          app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view16"
          app:layout_constraintTop_toBottomOf="@+id/wg_repaly_content" app:layout_constraintHorizontal_bias="0.5"
          android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>
