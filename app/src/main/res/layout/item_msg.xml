<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/bg_gray"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.ruffian.library.widget.RTextView
            app:corner_radius="30dp"
            app:background_normal="#999999"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="2019-05-08  16:48:03"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/wg_time"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/wg_time" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/constraintLayout4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020强化课上线了！"
                android:textColor="#ff333333"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp" android:id="@+id/wg_msg_title"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/bg_line"
              android:layout_marginTop="12dp"
              app:layout_constraintTop_toBottomOf="@+id/wg_msg_title" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:id="@+id/view12"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:text="您的资料已成功通过了我们的系统审核，请耐心等待仿款通知！"
                android:textColor="#ff999999"
                android:textSize="13sp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view12"
                app:layout_constraintEnd_toStartOf="@+id/imageView31" android:id="@+id/wg_msg_content"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back02"
                android:id="@+id/imageView31" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view12" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>