<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.TopicNumActivity">
    <TextView
            android:id="@+id/wg_tv_chapter"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="第一章知识"
            android:background="#E7E7E7"
            android:textColor="#ff666666"
            android:textSize="15sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:padding="14dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wg_tv_chapter" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/wg_topic_recycle"/>
</android.support.constraint.ConstraintLayout>