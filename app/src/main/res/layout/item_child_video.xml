<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="left"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="92dp">

    <ImageView
            android:layout_width="96dp"
            android:layout_height="62dp"
            android:id="@+id/wg_img"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年视频剪切真题汇总"
            android:textColor="#ff333333"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/wg_img" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/wg_img" android:id="@+id/wg_name"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp" app:srcCompat="@drawable/ic_small_user"
            android:id="@+id/imageView22"
            app:layout_constraintStart_toStartOf="@+id/wg_name"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/wg_img"/>
    <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp" app:srcCompat="@drawable/ic_small_play"
            android:id="@+id/imageView23"
            app:layout_constraintStart_toEndOf="@+id/wg_author" android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView22"
            app:layout_constraintTop_toTopOf="@+id/imageView22"/>
    <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp" app:srcCompat="@drawable/ic_time"
            android:id="@+id/imageView24"
            app:layout_constraintTop_toTopOf="@+id/imageView23"
            app:layout_constraintBottom_toBottomOf="@+id/imageView23"
            app:layout_constraintStart_toEndOf="@+id/wg_play_count" android:layout_marginStart="24dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="甲乙丙"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView22"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView22"
            app:layout_constraintBottom_toBottomOf="@+id/imageView22" android:id="@+id/wg_author"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27742"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/imageView23"
            app:layout_constraintBottom_toBottomOf="@+id/imageView23"
            app:layout_constraintStart_toEndOf="@+id/imageView23" android:layout_marginStart="8dp"
            android:id="@+id/wg_play_count"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="97分钟"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/imageView24"
            app:layout_constraintBottom_toBottomOf="@+id/imageView24"
            app:layout_constraintStart_toEndOf="@+id/imageView24" android:layout_marginStart="8dp"
            android:id="@+id/wg_play_time"/>
    <CheckBox
            android:layout_width="15dp"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/select_suo_paly"
            android:layout_height="15dp"
            android:id="@+id/wg_play_status" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>