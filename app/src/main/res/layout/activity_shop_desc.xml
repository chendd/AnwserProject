<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <android.support.constraint.ConstraintLayout

                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                tools:context=".ui.shop.ShopDescActivity">
            <com.youth.banner.Banner
                    android:layout_width="match_parent"
                    app:indicator_width="7dp"
                    app:indicator_margin="5dp"
                    app:indicator_drawable_selected="@color/bg_red"
                    app:indicator_drawable_unselected="@color/white"
                    android:layout_height="220dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:id="@+id/wg_banner"/>

            <TextView
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:text="2020考研：大纲精讲课程"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/wg_banner" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/wg_shop_name"/>
            <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:text="￥668-1098"
                    android:textColor="#ffe4413a"
                    android:textSize="16sp"
                    android:id="@+id/wg_shop_price" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/wg_shop_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/wg_shop_yprice"
                    app:layout_constraintHorizontal_chainStyle="packed"/>
            <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="￥1288"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/wg_shop_price"
                    android:id="@+id/wg_shop_yprice" app:layout_constraintStart_toEndOf="@+id/wg_shop_price"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="已销售434"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/wg_shop_price" android:id="@+id/wg_shop_count"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 随时观看"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    android:id="@+id/textView31"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/textView32"
                    app:layout_constraintHorizontal_chainStyle="spread" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/wg_shop_count"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 全新升级"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView31"
                    android:id="@+id/textView32" app:layout_constraintStart_toEndOf="@+id/textView31"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:layout_marginTop="16dp"
                                                         app:layout_constraintTop_toBottomOf="@+id/textView31"
                                                         app:layout_constraintStart_toStartOf="parent"
                                                         app:layout_constraintEnd_toEndOf="parent"
                                                         android:id="@+id/constraintLayout11">
                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:background="@color/bg_line"
                      app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent" android:id="@+id/view14"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真题时间限制"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/view14" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:id="@+id/textView34"/>
                <!--标签-->
                <com.zhy.view.flowlayout.TagFlowLayout
                        android:layout_width="match_parent"
                        app:max_select="1"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/wg_tag_flow"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView34"
                        android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
            </android.support.constraint.ConstraintLayout>
            <TextView android:layout_width="match_parent"
                      android:text="立即购买"
                      android:textColor="#ffffffff"
                      android:textSize="15sp"
                      android:background="@color/bg_red"
                      android:gravity="center"
                      android:layout_height="48dp"
                      app:layout_constraintTop_toBottomOf="@+id/constraintLayout11"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                      android:id="@+id/wg_btn_buy"/>
            <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    app:tabBackground="@null"
                    android:id="@+id/wg_tablayout"
                    app:tabGravity="fill"
                    app:tabRippleColor="@null"
                    app:tabIndicatorHeight="0dp"
                    app:tabSelectedTextColor="@color/bg_red"
                    app:tabTextColor="#333333"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toBottomOf="@+id/wg_btn_buy" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
            </android.support.design.widget.TabLayout>
            <View android:layout_width="1dp" android:layout_height="48dp" android:background="@color/bg_line"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintTop_toTopOf="@+id/wg_tablayout" android:id="@+id/view18"/>
        </android.support.constraint.ConstraintLayout>


        <com.wetin.anwserproject.widget.MyViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/wg_viewpager"
                app:layout_constraintTop_toBottomOf="@+id/view18"
        ></com.wetin.anwserproject.widget.MyViewPager>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>