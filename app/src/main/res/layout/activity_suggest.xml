<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.me.SuggestActivity">
    <com.ruffian.library.widget.RTextView
            app:background_normal="@color/bg_gray"
            app:background_pressed="@color/bg_gray"
            app:corner_radius="6dp"
            android:padding="10dp"
            android:hint="请输入您的意见"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/RTextView"/>


    <com.ruffian.library.widget.RTextView
            android:layout_width="match_parent"
            android:text="提交"
            android:textColor="@color/white"
            android:gravity="center"
            app:background_normal="@color/bg_red"
            app:background_pressed="@color/bg_red_press"
            app:corner_radius="@dimen/dp_4"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:id="@+id/wg_suggest"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/RTextView"/>
</android.support.constraint.ConstraintLayout>